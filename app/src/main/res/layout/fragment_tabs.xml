<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.screens.tabs.TabsFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/tabs_fragment_container"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/bottom_menu_tabs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/tabs_navigation" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu_tabs"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:menu="@menu/tabs_menu"
        app:elevation="6dp"
        android:elevation="6dp"
        app:itemTextColor="@color/selector_color_icon_bottom_menu"
        app:itemIconSize="28dp"
        app:background="@color/white"
        app:backgroundTint="@color/white"
        app:labelVisibilityMode="labeled"
        app:itemTextAppearanceActive="@style/caption_1"
        app:itemTextAppearanceInactive="@style/caption_1"
        app:itemActiveIndicatorStyle="@color/transparent"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconTint="@color/selector_color_icon_bottom_menu"
        app:itemRippleColor="@color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>