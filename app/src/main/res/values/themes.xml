<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Marketplace" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/back_light_pink</item>
        <item name="colorPrimaryDark">@color/back_pink</item>
        <item name="colorAccent">@color/element_dark_grey</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Marketplace" parent="Base.Theme.Marketplace" />

    <style name="app_til_style">
        <item name="hintEnabled">false</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorIconTint">@color/text_orange</item>
        <item name="errorTextColor">@color/text_orange</item>
        <item name="cursorErrorColor">@color/text_orange</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeColor">@color/back_light_grey</item>
        <item name="boxStrokeErrorColor">@color/text_orange</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:background">@drawable/background_placeholder</item>
        <item name="endIconDrawable">@drawable/ic_clear_text</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="app_et_style">
        <item name="android:textAppearance">@style/placeholder_text</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLength">36</item>
    </style>

    <style name="app_button_style">
        <item name="android:textAppearance">@style/button_text_2</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/sign_in</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

    <style name="app_bottom_bar_style">
        <item name="itemTextColor">@color/selector_color_icon_bottom_menu</item>
        <item name="itemIconSize">28dp</item>
        <item name="android:background">@color/white</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/caption_1</item>
        <item name="itemTextAppearanceInactive">@style/caption_1</item>
        <item name="itemActiveIndicatorStyle">@color/transparent</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemIconTint">@color/selector_color_icon_bottom_menu</item>
        <item name="itemRippleColor">@color/transparent</item>
    </style>

    <style name="app_chip_style" parent="@style/Widget.Material3.Chip.Input">
        <item name="android:textColor">@color/selector_color_text_chip</item>
        <item name="android:textAppearance">@style/title_4</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="checkedIconVisible">false</item>
        <item name="closeIconVisible">false</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:checked">false</item>
        <item name="closeIconEnabled">false</item>
        <item name="closeIconTint">@color/selector_color_text_chip</item>
        <item name="chipBackgroundColor">@color/selector_color_checked_chip</item>
    </style>

    <style name="app_image_slider_style">
        <item name="iss_error_image">@color/transparent</item>
        <item name="iss_placeholder">@color/transparent</item>
        <item name="iss_selected_dot">@drawable/background_dot_selected</item>
        <item name="iss_unselected_dot">@drawable/background_dot_unselected</item>
    </style>

</resources>