<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Marketplace" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/light_pink</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <item name="colorAccent">@color/dark_grey</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Marketplace" parent="Base.Theme.Marketplace" />

    <style name="app_til_style">
        <item name="hintEnabled">false</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorIconTint">@color/orange</item>
        <item name="errorTextColor">@color/orange</item>
        <item name="cursorErrorColor">@color/orange</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeColor">@color/light_grey</item>
        <item name="boxStrokeErrorColor">@color/orange</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:background">@drawable/background_placeholder</item>
        <item name="endIconDrawable">@drawable/ic_clear_text</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="app_et_style">
        <item name="android:textAppearance">@style/placeholder_text</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:maxLength">36</item>
    </style>

    <style name="app_button_style">
        <item name="android:textAppearance">@style/button_text_2</item>
        <item name="android:enabled">false</item>
        <item name="android:text">@string/sign_in</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button</item>
    </style>

</resources>